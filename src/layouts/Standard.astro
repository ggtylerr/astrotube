---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
    searchQuery?: string
}
const { searchQuery = "" } = Astro.props;
---

<html>
    <head>
        <BaseHead />
    </head>
    <body>
        <Header searchQuery={searchQuery} />
        <slot />
        <Footer />
    </body>
</html>